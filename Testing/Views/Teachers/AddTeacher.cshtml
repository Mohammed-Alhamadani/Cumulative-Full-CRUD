@{ ViewBag.Title = "Add Teacher"; }
@model Testing.Models.Teacher

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        div {
            padding: 10px;
        }
        .addBtn {
            background-color: #0077b6;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration:none;
        }

            .addBtn:hover {
                background-color: #0056b3;
                color: white;
            }


        
    </style>
    <title>Add Teacher</title>
</head>
<body>
    <h4>Add Teacher</h4>
    <form id="createTeacherForm" method="POST" action="/Teachers/AddTeacher">
        <div class="form-group">
            <label for="teacherfname">First Name:</label>
           
            @Html.TextBoxFor(model => model.FName, new { @class = "form-control", id = "teacherfname", name = "fname" })
        </div>
        <div class="form-group">
            <label for="teacherlname">Last Name:</label>
            @Html.TextBoxFor(model => model.LName, new { @class = "form-control", id = "teacherlname", name = "lname" })
        </div>
        <div class="form-group">
            <label for="hiredate">Hire Date:</label>
            @Html.TextBoxFor(model => model.Hiredate, new { @class = "form-control", id = "hiredate", name = "hiredate", type = "date" })
        </div>
        <div class="form-group">
            <label for="salary">Salary:</label>
            @Html.TextBoxFor(model => model.Salary, new { @class = "form-control", id = "salary", name = "salary", type = "number" })
        </div>
        <div>
            <input type="submit" value="Add Teacher" class="addBtn" />
            @Html.ActionLink("Back to List", "List", "Teachers", null, new { @class = "addBtn" })
        </div>
    </form>
</body>
</html>



